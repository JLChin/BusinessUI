<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#cce5ff" />
            <stroke
                android:width="1dp"
                android:color="#0084ff" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="20dp"
                android:top="4dp"
                android:right="20dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#cce5ff"
                android:endColor="#0084ff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0084ff" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="20dp"
                android:top="4dp"
                android:right="20dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>